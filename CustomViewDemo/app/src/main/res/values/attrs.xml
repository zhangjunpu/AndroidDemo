<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- 进度条颜色 -->
    <attr name="progressColor" format="color" />
    <!-- 进度条背景颜色 -->
    <attr name="progressBackgroundColor" format="color" />
    <!-- 进度条进度 -->
    <attr name="progress" format="integer" />
    <!-- 进度条最大值 -->
    <attr name="max" format="integer" />

    <!-- 环形进度条 -->
    <declare-styleable name="CircleProgressBar">
        <attr name="progressBackgroundColor" />
        <attr name="progressColor" />
        <attr name="progress" />
        <attr name="max" />
        <attr name="progressWidth" format="dimension" />
    </declare-styleable>

    <!-- 线性进度条 -->
    <declare-styleable name="LinearProgressBar">
        <attr name="progressBackgroundColor" />
        <attr name="progressColor" />
        <attr name="progress" />
        <attr name="max" />
        <attr name="isGradient" format="boolean" />
    </declare-styleable>

    <!-- 头像 -->
    <declare-styleable name="AvatarView">
        <attr name="strokeWidth" format="dimension" />
        <attr name="strokeColor" format="color" />
        <attr name="src" format="reference" />
    </declare-styleable>

    <!-- 轮播头像 -->
    <declare-styleable name="ImageAnimView">
        <attr name="avatarSize" format="dimension" />
        <attr name="avatarOffset" format="dimension" />
        <attr name="showCount" format="integer" />
    </declare-styleable>
</resources>